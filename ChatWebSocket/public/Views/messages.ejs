<div class="chat_window">
  <h1 class="title">Mensajeria Instantanea</h1>
  <div class="bottom_wrapper clearfix">
      <div class="messages" id="messages"></div>
      <form action="/message" method="post" onsubmit="return addMessage(this)" class="form">          
          <div class="message-bar">
            <input class="message_input" id="username" type="text" placeholder="Escribi tu email..." required/>
            <input class="message_input" id="texto" placeholder="Escribi tu mensaje aqui..." />        
            <input class="text form-btn" type="submit" value="Enviar"> 
          </div>
      </form>
  </div>
</div>